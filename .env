# ================================================================
# HOSTEL MANAGEMENT SAAS - ENVIRONMENT CONFIGURATION
# ================================================================
# Copy this file to .env and update values for your environment
# For production, ensure all CHANGE_ME values are updated

# ================================================================
# GENERAL APPLICATION SETTINGS
# ================================================================
PROJECT_NAME="Hostel Management SaaS API"
PROJECT_VERSION="1.0.0"
PROJECT_DESCRIPTION="Complete hostel management solution with booking, payments, and analytics"

# Environment: development, testing, staging, production
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_V1_STR="/api/v1"
API_DOCS_URL="/docs"
API_REDOC_URL="/redoc"

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Timezone (India Standard Time)
TIMEZONE="Asia/Kolkata"

# ================================================================
# DATABASE SETTINGS
# ================================================================
# Main Database
# Development: sqlite:///./app.db
# Production: postgresql://user:password@localhost/dbname
DATABASE_URL="postgresql://postgresql:Kiran$123@localhost/HostelDb"
DATABASE_ECHO=false

# Connection Pool Settings (for PostgreSQL/MySQL)
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Database Retry Settings
DATABASE_RETRY_ATTEMPTS=3
DATABASE_RETRY_DELAY=1.0

# Read Replica (optional)
# DATABASE_READ_URL="postgresql://user:password@replica-host/dbname"

# Backup Settings
BACKUP_RETENTION_DAYS=30

# ================================================================
# SECURITY SETTINGS
# ================================================================
# JWT Configuration - CHANGE IN PRODUCTION!
JWT_SECRET_KEY="CHANGE_ME_IN_PRODUCTION_USE_STRONG_SECRET_KEY_MINIMUM_32_CHARACTERS"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Session Settings
SESSION_TIMEOUT_MINUTES=480
REMEMBER_ME_DAYS=30

# HTTPS Settings (enable in production)
FORCE_HTTPS=false
SECURE_COOKIES=false

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000"

# API Security
API_KEY_HEADER="X-API-Key"
REQUIRE_API_KEY=false

# ================================================================
# EMAIL SETTINGS
# ================================================================
# Email Provider: smtp, sendgrid, mailgun, aws_ses
EMAIL_PROVIDER=smtp

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Email Identity
FROM_EMAIL="noreply@yourhostel.com"
FROM_NAME="Hostel Management"

# SendGrid (if using SendGrid)
SENDGRID_API_KEY=""

# Mailgun (if using Mailgun)
MAILGUN_API_KEY=""
MAILGUN_DOMAIN=""

# AWS SES (if using AWS SES)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"

# Email Limits
EMAIL_RATE_LIMIT_PER_HOUR=100
EMAIL_BATCH_SIZE=50

# Email Templates
EMAIL_TEMPLATE_DIR="templates/email"

# ================================================================
# SMS SETTINGS
# ================================================================
# SMS Provider: twilio, msg91, textlocal, aws_sns, gupshup, fast2sms
SMS_PROVIDER=msg91

# Twilio Configuration (International)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_FROM_NUMBER=""

# MSG91 Configuration (Popular in India)
MSG91_API_KEY=""
MSG91_SENDER_ID=""

# TextLocal Configuration (Popular in India)
TEXTLOCAL_API_KEY=""
TEXTLOCAL_SENDER=""

# SMS Rate Limiting
SMS_RATE_LIMIT_PER_MINUTE=100
SMS_RATE_LIMIT_PER_HOUR=1000
SMS_RATE_LIMIT_PER_DAY=10000

# SMS Retry Settings
SMS_RETRY_ATTEMPTS=3
SMS_RETRY_DELAY=1.0
SMS_TIMEOUT=30

# ================================================================
# FILE STORAGE SETTINGS
# ================================================================
# Local Storage
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=".jpg,.jpeg,.png,.pdf,.doc,.docx,.xls,.xlsx"

# AWS S3 (if using cloud storage)
AWS_S3_BUCKET=""
AWS_S3_REGION="us-east-1"
AWS_S3_ACCESS_KEY=""
AWS_S3_SECRET_KEY=""
AWS_S3_CUSTOM_DOMAIN=""

# Image Processing
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=85

# ================================================================
# CACHE SETTINGS
# ================================================================
# Cache Backend: redis, memcached, memory
CACHE_BACKEND=memory

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# Memcached Configuration
MEMCACHED_SERVERS="127.0.0.1:11211"

# Cache TTL (seconds)
CACHE_DEFAULT_TTL=300
CACHE_USER_TTL=900
CACHE_SETTINGS_TTL=3600

# ================================================================
# MONITORING & LOGGING
# ================================================================
# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=""
LOG_ROTATION="midnight"
LOG_RETENTION=30

# Sentry Error Tracking (recommended for production)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"
SENTRY_RELEASE=""

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30

# ================================================================
# PAYMENT GATEWAY SETTINGS
# ================================================================
# Currency
CURRENCY="INR"
PAYMENT_TIMEOUT_MINUTES=15

# Razorpay (Popular in India)
RAZORPAY_KEY_ID=""
RAZORPAY_KEY_SECRET=""
RAZORPAY_WEBHOOK_SECRET=""

# Stripe (International)
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# PayPal
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_MODE="sandbox"

# ================================================================
# FEATURE FLAGS
# ================================================================
# Enable/Disable Features
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_SMS_VERIFICATION=true
FEATURE_PAYMENTS=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true

# ================================================================
# BUSINESS LOGIC SETTINGS
# ================================================================
# Booking Configuration
BOOKING_ADVANCE_DAYS=365
BOOKING_CANCELLATION_HOURS=24
BOOKING_MODIFICATION_HOURS=2

# Payment Configuration
ADVANCE_PAYMENT_PERCENTAGE=20
LATE_PAYMENT_PENALTY_PERCENTAGE=5

# Notification Settings (hours before check-in)
NOTIFICATION_REMINDER_HOURS="72,24,2"